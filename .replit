modules = ["python-3.11", "postgresql-16"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "GV50 Tracker Service"

[[workflows.workflow]]
name = "GV50 Tracker Service"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd gv50 && python start_service.py"
waitForPort = 8000

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
